# Database Individual Variables
DB_USERNAME=mofresh_user
DB_PASSWORD=your_secure_password_here
DB_NAME=mofresh_db
DB_HOST=localhost
DB_PORT=5432

# The URL Prisma actually uses
DATABASE_URL="postgresql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public"

# Auth & Security
JWT_SECRET=your_jwt_secret_key_min_32_chars_long_change_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_in_production
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# CORS
CORS_ORIGIN=http://localhost:3001

# Paypack Rwanda Integration
PAYPACK_CLIENT_ID=your_paypack_client_id
PAYPACK_CLIENT_SECRET=your_paypack_client_secret
PAYPACK_API_URL=https://payments.paypack.rw/api
PAYPACK_WEBHOOK_SECRET=your_paypack_webhook_secret

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=debug




